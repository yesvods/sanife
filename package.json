{
  "name": "sanife",
  "description": "Swiss Army Knife",
  "scripts": {
    "build": "gulp build:dist",
    "test": "ava",
    "test:dev": "ava -w -v"
  },
  "version": "0.1.2",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "main": "dist",
  "ava": {
    "files": [
      "test/**/*.spec.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 10,
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.23.0",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-rollup": "^2.11.0",
    "rollup": "^0.36.4",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-uglify": "^1.0.1"
  }
}
